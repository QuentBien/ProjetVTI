<html>
<head>
    <% include ../partials/head %>
</head>
<body>
<h1>Blob ID <%= blob._id %></h1>
<form name="updateblob" action="<%= '/blobs/'+blob._id+'/edit' %>" method="post" enctype="application/x-www-form-urlencoded">
    <p>
        Name:
        <input id="inputName" type="text" value="<%= blob.name %>" name="name">
    </p>
    <p>
        Badge:
        <input id="inputBadge" type="number" value="<%= blob.badge %>" name="badge">
    </p>
    <p>
        DOB:
        <input id="inputDob" type="date" value="<%= blobdob %>" name="dob">
    </p>
    <p>
        Are You Loved?:
        <input id="inputIsLoved" type="checkbox" checked=<%= blob.isloved==true?'checked':undefined%>name="isLoved">
    </p>
    <input type="hidden" value="PUT" name="_method"/>
    <button id="btnSubmit" type="submit">Update</button>
</form>
</body>
</html>